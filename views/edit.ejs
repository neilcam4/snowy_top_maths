<% include ./partials/header %>
<div class="ui main text container segment" style="margin-top:80px;">
<form class="ui form" action='/users/<%=user._id%>?_method=PUT' method="POST">
    <h1>Edit User <%=user.username%></h1>
  <div class="field">
    <label>Name</label>
    <input type="text" name="users[name]" value="<%=user.username%>">
  </div>
    <div class="field">
    <label>Year</label>
    <input type="text" name="users[year]" value="<%=user.year%>">
  </div>
    <div class="field">
    <label>Score</label>
    <input type="text" name="users[score]" value="<%=user.score%>">
  </div>
  
  <button class="ui button" type="submit">Submit</button>
</form>
</div>
<% include ./partials/footer %>