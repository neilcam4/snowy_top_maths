<% include ./partials/header %>
<div class="ui main text container segment" style="margin-top:80px;">
  <form class="ui form" action='/users/<%=user._id%>?_method=PUT' method="POST">
    <h1>Edit User <%=user.username%></h1>
    <div class="field">
      <label>Name</label>
      <input type="text" name="users[name]" value="<%=user.username%>">
    </div>
    <div class="field">
      <label>Email</label>
      <input type="text" name="users[email]" value="<%=user.email%>">
    </div>
    <div class="field">
      <label>Score</label>
      <input type="text" name="users[score]" value="<%=user.score%>"></input>
    </div>
    <div class="field">
      <label>Quiz</label>
      <input type="text" name="users[quiz]" value="<%=user.quiz%>"></input>
    </div>
    <button class="ui button" type="submit">Submit</button>
  </form>
</div>
<% include ./partials/footer %>