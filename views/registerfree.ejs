<% include ./partials/headerfront %>
<div class="mw-500 absolute-center">
    <div class="card color-dark shadow-6dp animated fadeIn animation-delay-7">
        <div class="ms-hero-bg-primary ms-hero-img-mountain">
            <h2 class="text-center no-m pt-4 pb-4 color-white index-1">Register</h2>
        </div>
        <ul class="nav nav-tabs nav-tabs-full nav-tabs-1 nav-tabs-transparent indicator-primary" role="tablist">
            <li class="nav-item" role="presentation">
                <a href="#ms-register-tab" aria-controls="ms-register-tab" role="tab" data-toggle="tab"
                    class="nav-link withoutripple">
                    <i class="zmdi zmdi-account-add"></i> New User Register</a>
            </li>
        </ul>
        <div class="card-body">
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane fade active show" id="ms-login-tab">
                    <form action='/registerfree' method="post">
                        <fieldset>

                            <div class="form-group label-floating">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-user"></i>
                                    </span>
                                    <label class="control-label" for="ms-form-username">Name</label>
                                    <input type="text" name="username" id="ms-form-username" class="form-control">
                                </div>

                            </div>
                            <div class="form-group label-floating">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="fa fa-envelope-o"></i>
                                    </span>
                                    <label class="control-label" for="ms-form-email">Email</label>
                                    <input type="email" name="email" id="ms-form-email" class="form-control"> </div>

                            </div>
                            <div class="form-group label-floating">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="zmdi zmdi-lock"></i>
                                    </span>
                                    <label class="control-label" for="ms-form-pass">Password</label>
                                    <input type="password" minlength="8" name="password" id="ms-form-pass"
                                        class="form-control"> </div>
                            </div>
                            <div class="form-group label-floating">
                                <div class="input-group">
                                    <span class="input-group-addon">
                                        <i class="zmdi zmdi-lock"></i>
                                    </span>
                                    <label class="control-label" for="ms-form-pass">Subscription Type Free</label>
                                    <input type="text" name="subscription_type" id="ms-form-subscription_type"
                                        class="form-control"> </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-11">
                                    <button class="btn btn-raised btn-primary pull-right"
                                        type="submit">Register</button>
                                    <script src="js/plugins.min.js"></script>
                                    <script src="js/app.min.js"></script>
    </body>
</html>